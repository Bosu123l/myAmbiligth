        </Grid>
        <ToggleButton x:Name="ToggleButton" Style="{StaticResource ToggleButton}" Grid.Column="5" Grid.Row="1" Margin="0,0,86,0" Grid.ColumnSpan="2" HorizontalAlignment="Right" Width="62" Height="33" VerticalAlignment="Top">
           
           

        </ToggleButton>
    </Grid>
</UserControl>
