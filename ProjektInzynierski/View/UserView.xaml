                                        <SkewTransform/>
                                        <RotateTransform Angle="-90"/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </Path.RenderTransform>
                            </Path>
                        </Canvas>

                    </Viewbox>
                </Button.Content>
            </Button>
            <Button Name="Left" Click="Button_Click_3"   Grid.Row="1" Style="{StaticResource ButtonStyle}">
